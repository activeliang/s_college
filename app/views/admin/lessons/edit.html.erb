<h2>编辑课程</h2>

<%= simple_form_for [:admin,@lesson] do |f| %>
<select name="lesson[category_id]">
  <option> - 请选择分类 -</option>
  <% @root_categories.each do |category| %>
    <option value="<%= category.id %>" <%= @lesson.category_id == category.id ? 'selected' : '' %>><%= category.title %></option>
  <% end %>
</select>
<%= f.input :title %>
<%= f.input :intro, label: "简介"%>
<%= f.input :description, label: "详情介绍(markdown)" %>
<%= f.input :subtitle, label: "副标题" %>
<%= f.input :weight %>
<%= f.input :effect %>
<% if @lesson.main_image.present? %>
<h3>当前已上传首页展示图</h3>
<%= image_tag @lesson.main_image.small, class: "thumb", style: "box-shadow: 10px 10px 40px #888; margin: 10px;" %>
<% end  %>
<%= f.input :main_image, label: "在首页的展示图" %> <br>
<% if @lesson.main_image.present? %>
<h3>当前已上传首页展示图</h3>
<%= image_tag @lesson.minor_image.medium, class: "thumb", style: "box-shadow: 10px 10px 40px #888; margin: 10px;"%>
<% end  %>
<%= f.input :minor_image, label: "介绍页面大图" %>
<%= f.submit "提交", class: "btn btn-primary" %>
<% end  %>
