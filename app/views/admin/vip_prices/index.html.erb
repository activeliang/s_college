<h1>vip价格管理</h1>
<hr>
<h2>现有的项目</h2>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>标题</th>
      <th>价格</th>
      <th>权重值（系统会选取最大的作为VIP价格）</th>
      <th>状态</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @vip_prices.each do |vip_price| %>
      <tr>
        <td><%= vip_price.id %></td>
        <td><%= vip_price.title %></td>
        <td><%= vip_price.price %></td>
        <td>
          <%= form_tag update_weight_admin_vip_price_path(vip_price),method: :post do %>
          <input type="text" value="<%= vip_price.weight %>" name="weight" >
          <%= submit_tag "更新", class: "btn btn-default btn-xs" %>
          <% end %>
        </td>
        <td>
          <%= render_vip_price_state(vip_price) %>
          <%= render_vip_price_state_btn(vip_price) %>
        </td>
        <td>
          <%= link_to "编辑", edit_admin_vip_price_path(vip_price), class: "btn btn-primary" %>
          <%= link_to "删除", admin_vip_price_path(vip_price), class: "btn btn-primary", "data-confirm": "确定要删除", method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h2>新增项目</h2>
<%= simple_form_for [:admin, @vip_price] do |f| %>
  <%= f.input :title %>
  <%= f.input :price %>
  <%= f.input :weight %>
  <%= f.input :is_hidden %>
  <%= f.submit "submit", class: "btn btn-primary" %>
<% end %>
