<!DOCTYPE html>
<html>
  <head>
    <title>SCollege 后台</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

      <div class="container-fluid">
        <%= render "common/navbar" %>
        <%= render "common/flashes" %>
        <div class="row">
            <div class="col-md-2">
                <ul class="nav nav-pills nav-stacked" style="max-width: 300px;">
                    <li><%= link_to("课程中心", admin_lessons_path, class: "btn btn-success") %></li>
                    <li><%= link_to("分类管理", admin_categories_path, class: "btn btn-success") %></li>
                    <li><%= link_to "用户列表", '#', class: "btn btn-success" %></li>
                </ul>
            </div>
            <div class="col-md-10">
                <%= yield %>
            </div>
        </div>
      </div>

      <%= render "common/footer" %>
      <%= yield :javascripts %>
  </body>
</html>
